<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/list_film_cover"
        android:layout_width="150dp"
        android:layout_height="216dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_roboto_bold"
        android:textColor="@color/text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_film_cover" />

    <TextView
        android:id="@+id/list_film_description"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_film_name" />


    <RatingBar
        android:id="@+id/list_ratingBar_indicator"
        style="@style/ImageRatingBar"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:background="?android:attr/windowBackground"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_film_cover" />

    <TextView
        android:id="@+id/list_text_age_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="140dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/sh_age_limit_circle_list"
        android:fontFamily="@font/font_roboto_regular"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="7sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_film_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>